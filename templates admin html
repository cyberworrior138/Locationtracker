<script>
async function load(){
  const r = await fetch("/api/logs");
  const d = await r.json();
  let html = "";
  d.slice().reverse().forEach(x=>{
    html += `
    <div class="item">
      <b>Time:</b> ${x.time}<br>
      <b>IP:</b> ${x.ip}<br>
      <b>Device:</b> ${x.device}<br>
      <b>Lat/Lon:</b> ${x.lat}, ${x.lon}<br>
      <b>Battery:</b> ${x.battery}<br>
      <b>Device ID:</b> ${x.device_id}
    </div>`;
  });
  document.getElementById("logs").innerHTML = html || "<i>No data yet</i>";
}
load();
</script>
